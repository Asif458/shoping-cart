<section>
    <div class="container">
      <div class="row">
        <a href="/admin/add-products" class="btn btn-success ml-auto mt-5">Add products</a>

      </div>
        <table class="table table-striped table-dark mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">title</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:50px" src= "/product-images/{{this._id}}.jpg"</td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want ot delete {{this.name}} ?')">delete</a>
        </td>
        
    </tr>
    {{/each}}
     
  </tbody>
</table>
    </div>
</section>